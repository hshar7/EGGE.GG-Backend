type Tournament {
    id: String!
    tournamentId: Int!
    deadline: Date!
    name: String!
    description: String!
    status: String!
    prize: Int!
    maxPlayers: Int!
    game: Game!
    featured: Boolean!
    createdAt: Date!
    updatedAt: Date!
}

type Game {
    id: String!
    url: String!
    name: String!
    createdAt: Date!
    updatedAt: Date!
}

# The Root Query for the application
type Query {
    tournaments(count: Int, offset: Int): [Tournament]!
}

scalar Date
